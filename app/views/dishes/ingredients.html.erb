<div class="iPhone-13">

  <div class="iPhone-13-container iPhone-13-container-colour">


  <div class="dish-card-simple-container" data-controller="dish-card">
    <div class="dish-card-simple">
      <h4><%= @dish.title %></h4>
      <i class="dish-card-btn fa-solid fa-lg fa-caret-down" data-action="click->cuisine-history#revealContent" data-cuisine-history-target="arrow"></i>
    </div>
  </div>


    <div class="ingredient-list">
      <h2>Good! Let's get the ingredients.</h2>

      <% x = 1 %>
      <% @dish.ingredients.each do |i| %>
        <hr>
        <div class="ingredients-card-simple">

          <h6 class="ingredients-index"><%= x %></h6>
          <p><%= i %></p>
          <i class="fa-regular fa-circle"></i>
          <i class="fa-solid fa-circle-check"></i>
          <% x = x + 1 %>
        </div>
      <% end %>

      <div class="dish-p-btn">
        <%= link_to "← Back to dish", dish_path(@dish), class:"btn btn-dish-back" %>
        <%= link_to "See recipe →", dish_recipes_path(@dish), class:"btn btn-dish-next" %>
      </div>
    </div>

    <div class="iPhone-13-spacing-colour"></div>

  </div>

  <%= render "shared/bottom_navbar" %>

  </div>

</div>
