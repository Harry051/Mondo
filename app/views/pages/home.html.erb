<div class="iPhone-13">

  <div class="home-background-top">

    <div class="home-logo">
      <%#= image_tag "mondo-logo.png" %>
    </div>

    <div class="home-graphics">
      <%= image_tag "pages-home-graphics.png" %>
    </div>

    <div class="home-infos">
      <h3>Cook like a chef </h3>
      <p>Cook professional dishes right in your kitchen</p>
    </div>

    <div class="home-btn">
      <%= link_to "Get Started", "#home-bottom", class: "btn btn-get-started" %>
    </div>

  </div>

  <div id="home-bottom" class="home-background-bottom">

    <%# <div class="home-tab-menu"> %>



      <div class="home-nav" data-controller="home-nav-btn">
        <div class="nav-btn btn"><i class="fa-solid fa-bars"></i>
        </div>
      </div>

      <%# <li class="home-tab-menu-item-toggle">
        <span class="home-tab-menu-icon"><i style="color: #261127" class="fa-solid fa-book-atlas fa-lg"></i></span>
        <span class="home-tab-menu-text">Nav Menu</span>
      </li> %>



    <%# </div> %>


    <div class="home-search-text">
      <h4>Choose a country or Search a dish</h4>
    </div>

    <div class="home-search-bar">
      <p>Search a dish</p>
      <p><i class="fa-solid fa-magnifying-glass"></i></p>
    </div>

    <div class="home-globe">
      <div
           style="width: 382px; height: 364px"
           data-controller="map"
           data-map-markers-value="<%= @markers.to_json %>"
           data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>

    <div class="home-earth-shadow">
      <%= image_tag "pages-home-earth-shadow.png" %>
    </div>

    <div class="home-filters-box">

      <div class="home-filters-box-top">
        <p>Filters</p>
        <p><i class="fa-solid fa-filter"></i></p>
        <hr>
      </div>

      <div class="home-filters-box-bottom">

        <div class="home-filters-grid">

          <%= link_to root_path(category: "Vegetarian") do %>
            <p><i class="fa-solid fa-seedling <%= params[:category] == "Vegetarian" ? "selected" : "" %>"></i></p>
            <p>Vegetarian</p>
          <% end %>
        </div>

        <div class="home-filters-grid">
          <%= link_to root_path(category: "Pescetarian") do %>
            <p><i class="fa-solid fa-fish <%= params[:category] == "Pescetarian" ? "selected" : "" %>"></i></p>
            <p>Pescetarian</p>
          <% end %>
        </div>

        <div class="home-filters-grid">
          <%= link_to root_path(category: "Lactose") do %>
            <p><i class="fa-solid fa-cow <%= params[:category] == "Lactose" ? "selected" : "" %>"></i></p>
            <p>Lactose</p>
          <% end %>
        </div>

        <div class="home-filters-grid">
          <%= link_to root_path(category: "Vegan") do %>
            <p><i class="fa-solid fa-leaf" <%= params[:category] == "Vegan" ? "selected" : "" %>></i></p>
            <p>Vegan</p>
          <% end %>
        </div>

        <div class="home-filters-grid">
          <%= link_to root_path(category: "Gluten") do %>
            <p><i class="fa-solid fa-bread-slice <%= params[:category] == "Gluten" ? "selected" : "" %>"></i></p>
            <p>Gluten</p>
          <% end %>
        </div>

        <div class="home-filters-grid">
          <%= link_to root_path(category: "Puddings") do %>
            <p><i class="fa-solid fa-ice-cream <%= params[:category] == "Puddings" ? "selected" : "" %>"></i></p>
            <p>Puddings</p>
          <% end %>
        </div>

      </div>

    </div>

  </div>

</div>
