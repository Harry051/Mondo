<div class="iPhone-13">

  <div class="home-background-top">

    <div class="home-logo">
      <%= image_tag "mondo-logo.png" %>
    </div>

    <div class="home-graphics">
      <%= image_tag "pages-home-graphics.png" %>
    </div>

    <div class="home-infos">
      <h3>Cook like a chef 👨‍🍳</h3>
      <p>Cook professional dishes right in your kitchen</p>
    </div>

    <div class="home-btn">
      <%= link_to "Get Started", "#home-bottom", class: "btn btn-get-started" %>
    </div>

  </div>

  <div id="home-bottom" class="home-background-bottom">

    <%= link_to "#home-bottom", class: "btn nav-btn" do %>
      <i class="fa-solid fa-bars"></i>
    <% end %>

  </div>

  <div class="container">
    <div style="width: 90%; height: 600px;" class="mappy" data-controller="map" data-map-markers-value="<%= @markers.to_json %>" data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>

</div>
